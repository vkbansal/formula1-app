{
  "name": "formula1-app",
  "version": "1.0.0",
  "description": "An app for Formula 1 world Championship related statistics",
	"type": "module",
	"private": true,
	"author": "Vivek Kumar Bansal <contact@vkbansal.me>",
  "license": "MIT",
  "scripts": {
		"prepare": "husky install",
		"lint": "eslint 'src/**/*.{ts,tsx,astro}' 'datagen/**/*.{js,mjs}'",
    "fmt": "prettier --plugin-search-dir=. --write 'src/**/*.{ts,tsx,astro}' 'datagen/**/*.{js,mjs}'",
    "fmtc": "prettier --plugin-search-dir=. --check 'src/**/*.{ts,tsx,astro}' 'datagen/**/*.{js,mjs}'",
    "typecheck": "astro check && tsc --noEmit",
    "dev": "astro dev",
    "start": "astro dev",
    "prebuild": "rm -rf public",
    "build": "NODE_ENV=production astro build"
  },
  "dependencies": {
    "@astrojs/preact": "^0.5.2",
    "@types/js-yaml": "^4.0.5",
    "astro": "1.0.0-rc.3",
    "change-case": "^4.1.2",
    "classnames": "^2.3.1",
    "date-fns": "^2.29.1",
    "js-yaml": "^4.1.0",
    "normalize.css": "^8.0.1",
    "preact": "^10.10.0",
    "preact-render-to-string": "^5.2.1",
    "sass": "^1.54.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-astro": "^0.16.0",
    "husky": "^8.0.1",
    "mariadb": "^3.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.2.0"
  }
}
