{
  "name": "formula1-app",
  "version": "1.0.0",
  "description": "An app for Formula 1 world Championship related statistics",
  "main": "index.js",
  "scripts": {
    "lint": "eslint 'src/**/*.{ts,tsx}' 'datagen/**/*.{js,mjs}'",
    "fmt": "prettier --plugin-search-dir=. --write 'src/**/*.{ts,tsx,astro}' 'datagen/**/*.{js,mjs}'",
    "fmt:check": "prettier --plugin-search-dir=. --check 'src/**/*.{ts,tsx}' 'datagen/**/*.{js,mjs}'",
		"typecheck": "astro check && tsc --noEmit",
    "dev": "astro dev",
    "data": "wget http://ergast.com/downloads/f1db.sql.gz -O initdb.d/f1db.sql.gz",
    "prebuild": "rm -rf public",
    "build": "NODE_ENV=production astro build",
    "datagen": "node ./scripts/datagen/index.mjs generate"
  },
  "author": "Vivek Kumar Bansal <contact@vkbansal.me>",
  "license": "MIT",
  "devDependencies": {
    "@astrojs/preact": "^0.5.2",
    "@types/js-yaml": "^4.0.5",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "astro": "^1.0.0-beta.73",
    "change-case": "^4.1.2",
    "classnames": "^2.3.1",
    "d3-scale": "^4.0.2",
    "date-fns": "^2.29.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "fast-json-stable-stringify": "^2.1.0",
    "globby": "^13.1.2",
    "js-yaml": "^4.1.0",
    "mariadb": "^3.0.0",
    "normalize.css": "^8.0.1",
    "preact": "^10.10.0",
    "preact-render-to-string": "^5.2.1",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.1.2",
    "sass": "^1.54.0",
    "typescript": "^4.7.4"
  }
}
