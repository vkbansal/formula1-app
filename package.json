{
  "name": "formula1-app",
  "version": "1.0.0",
  "description": "A demo app for \"Formula 1 world Championship (1950 - 2020)\". Data is taken from [here](https://www.kaggle.com/rohanrao/formula-1-world-championship-1950-2020) and stored in a SQLite file",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext .ts --ext .tsx src",
    "fmt": "prettier --write 'src/**/*.{ts,tsx,scss}'",
    "client": "webpack --config-name client --progress --mode=development --watch",
    "server": "webpack --config-name server --progress --mode=development --watch",
    "start": "nodemon --watch build/server --ext .js --delay 2 -r dotenv/config build/server",
    "prebuild": "rimraf ./build",
    "apidocs": "openapi-dev-tool serve --port 5000 --config openapi-dev-tool-config.json",
    "build": "yarn build:client && yarn build:server",
    "build:client": "NODE_ENV=production webpack --config-name client --progress --mode=production",
    "build:server": "NODE_ENV=production webpack --config-name server --progress --mode=production",
    "codegen": "graphql-codegen",
    "postcodegen": "prettier --write src/client/common/graphql-types.ts src/server/graphql/types.ts"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@chakra-ui/react": "^1.3.4",
    "@emotion/css": "^11.1.3",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "dotenv": "^8.2.0",
    "emoji-flags": "^1.3.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.12.1",
    "framer-motion": "^3.10.0",
    "mariadb": "^2.5.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "restful-react": "^15.2.0",
    "urql": "^2.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.1",
    "@graphql-codegen/typescript": "^1.21.0",
    "@graphql-codegen/typescript-operations": "^1.17.14",
    "@graphql-codegen/typescript-urql": "^2.0.3",
    "@lyra-network/openapi-dev-tool": "^6.0.9",
    "@types/emoji-flags": "^1.2.0",
    "@types/express": "^4.17.11",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-router-dom": "^5.1.7",
    "@types/sqlite3": "^3.1.7",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "chalk": "^4.1.0",
    "copy-webpack-plugin": "^8.0.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "express-graphql": "^0.12.0",
    "fork-ts-checker-webpack-plugin": "^6.1.1",
    "graphql": "^15.5.0",
    "html-webpack-plugin": "^5.2.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.17",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.2.3",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^2.5.2",
    "yaml-loader": "^0.6.0"
  }
}
