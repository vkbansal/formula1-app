{
  "name": "formula1-app",
  "version": "1.0.0",
  "description": "An app for Formula 1 world Championship related statistics",
  "type": "module",
  "private": true,
  "author": "Vivek Kumar Bansal <contact@vkbansal.me>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint 'src/**/*.{ts,tsx,astro}'",
    "typecheck": "astro check && tsc --noEmit",
    "dev": "astro dev",
    "start": "astro dev",
    "data:gen": "node --loader ts-node/esm ./tools/generate-data.js --allQueries",
    "data:up": "node --loader ts-node/esm ./tools/update-data.ts",
    "prebuild": "rm -rf dist",
    "build": "NODE_ENV=production astro build",
    "postbuild": "sed -i \"s|/seasons/:year/round- |/seasons/:year/round-*|\" dist/_redirects",
    "fmt": "prettier --plugin-search-dir=. --write 'src/**/*.{ts,tsx,astro}'",
    "fmtc": "prettier --plugin-search-dir=. --check 'src/**/*.{ts,tsx,astro}'"
  },
  "dependencies": {
    "@astrojs/netlify": "^3.0.0",
    "@astrojs/preact": "^3.0.0",
    "astro": "^3.0.4",
    "change-case": "^4.1.2",
    "chart.js": "^4.4.0",
    "chartjs-plugin-zoom": "^2.0.1",
    "dayjs": "^1.11.9",
    "normalize.css": "^8.0.1",
    "preact": "^10.17.1",
    "sass": "^1.66.1",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.2.0",
    "@types/cli-progress": "^3.11.0",
    "@types/node": "^20.5.7",
    "@types/prompts": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "cheerio": "1.0.0-rc.12",
    "cli-progress": "^3.12.0",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-astro": "^0.29.0",
    "fast-json-stable-stringify": "^2.1.0",
    "mariadb": "^3.2.0",
    "meow": "^12.1.1",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "prompts": "^2.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "zod": "^3.22.2",
    "zx": "^7.2.3"
  }
}
