{
  "name": "formula1-app",
  "version": "1.0.0",
  "description": "An app for Formula 1 world Championship related statistics",
  "type": "module",
  "private": true,
  "author": "Vivek Kumar Bansal <contact@vkbansal.me>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint '{src,tools}/**/*.{ts,tsx,astro}'",
    "check": "astro check && tsc --noEmit",
    "dev": "astro dev",
    "start": "astro dev",
    "data:gen": "bun ./tools/generate-data.ts --allQueries",
    "data:up": "bun ./tools/update-data.ts",
    "prebuild": "rm -rf dist && rm -rf .netlify",
    "build": "NODE_ENV=production astro build",
    "fmt": "prettier --plugin-search-dir=. --write 'src/**/*.{ts,tsx,astro,json}'",
    "fmtc": "prettier --plugin-search-dir=. --check 'src/**/*.{ts,tsx,astro,json}'"
  },
  "dependencies": {
    "@astrojs/preact": "^4.0.11",
    "@astrojs/vercel": "^8.1.4",
    "astro": "^5.7.10",
    "change-case": "^5.4.4",
    "dayjs": "^1.11.13",
    "globby": "^14.1.0",
    "normalize.css": "^8.0.1",
    "preact": "^10.26.5",
    "sass": "^1.87.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@cspell/eslint-plugin": "^8.19.4",
    "@eslint/js": "^9.26.0",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^22.15.3",
    "@types/papaparse": "^5.3.15",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "chalk": "^5.4.1",
    "cheerio": "1.0.0",
    "cli-progress": "^3.12.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "fast-json-stable-stringify": "^2.1.0",
    "globals": "^16.0.0",
    "just-omit": "^2.2.0",
    "just-safe-get": "^4.2.0",
    "ky": "^1.8.1",
    "meow": "^13.2.0",
    "papaparse": "^5.5.2",
    "prettier": "^3.5.3",
    "prettier-plugin-astro": "^0.14.1",
    "prompts": "^2.4.2",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.31.1",
    "zx": "^8.5.3"
  },
  "pnpm": {
    "overrides": {
      "zod": "3.24.2",
      "path-to-regexp": "6.3.0"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild",
      "sharp"
    ]
  }
}
