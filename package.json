{
  "name": "formula1-app",
  "version": "1.0.0",
  "description": "An app for Formula 1 world Championship related statistics",
  "type": "module",
  "private": true,
  "author": "Vivek Kumar Bansal <contact@vkbansal.me>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint 'src/**/*.{ts,tsx,astro}'",
    "typecheck": "astro check && tsc --noEmit",
    "dev": "astro dev",
    "start": "astro dev",
    "data:gen": "bun ./tools/generate-data.ts --allQueries",
    "data:up": "bun ./tools/update-data.ts",
    "prebuild": "rm -rf dist && rm -rf .netlify",
    "build": "NODE_ENV=production astro build",
    "fmt": "prettier --plugin-search-dir=. --write 'src/**/*.{ts,tsx,astro}'",
    "fmtc": "prettier --plugin-search-dir=. --check 'src/**/*.{ts,tsx,astro}'"
  },
  "dependencies": {
    "@astrojs/preact": "^3.0.1",
    "@astrojs/vercel": "^5.1.0",
    "astro": "^3.3.4",
    "change-case": "^5.1.2",
    "chart.js": "^4.4.0",
    "chartjs-plugin-zoom": "^2.0.1",
    "dayjs": "^1.11.10",
    "normalize.css": "^8.0.1",
    "preact": "^10.18.1",
    "sass": "^1.69.5",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.2.1",
    "@types/cli-progress": "^3.11.4",
    "@types/lodash.deburr": "^4.1.8",
    "@types/node": "^20.8.9",
    "@types/prompts": "^2.4.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "cheerio": "1.0.0-rc.12",
    "cli-progress": "^3.12.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-astro": "^0.29.1",
    "fast-json-stable-stringify": "^2.1.0",
    "lodash.deburr": "^4.1.0",
    "mariadb": "^3.2.2",
    "meow": "^12.1.1",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.1",
    "prompts": "^2.4.2",
    "typescript": "^5.1.3",
    "zod": "^3.22.4",
    "zx": "^7.2.3"
  },
	"pnpm": {
		"overrides": {
			"zod": "3.22.4"
		}
	}
}
